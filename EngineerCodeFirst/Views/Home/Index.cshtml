<div class="row">
    <div class="col-md-6">
        <h3>On Tour</h3>
        <table cellpadding="10">
            <tr>
                <th>
                    Bus
                </th>
                <th>
                    Driver
                </th>
                <th>
                    Line
                </th>
            </tr>
            @foreach (var item in Model.BusesOnTour)
            {
                <tr>
                    <td>
                        @item.RegNum
                    </td>
                    <td>
                        @item.Driver
                    </td>
                    <td>
                        @item.Line
                    </td>
                    @*
                        ***** display geolocation for particular bus ******
                            <td>
                               (
                               @item.Latitude
                               ,
                               @item.Longitude
                               )
                           </td>
                    *@

                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h3>Notifications</h3>
        <table cellpadding="10">
            <tr>
                <th>
                    Driver
                </th>
                <th>
                    Text
                </th>
                <th>
                    Added on
                </th>
            </tr>
            @foreach (var item in Model.DriversNotifications)
            {
                <tr>
                    <td>
                        @item.Driver
                    </td>
                    <td>
                        @item.Text
                    </td>
                    <td>
                        @item.TimeStamp
                    </td>
                    <td>
                        @Html.ActionLink("Mark as read", "MarkAsRead", "MsgDrivers", new { id = item.MsgDriverID }, null)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>





