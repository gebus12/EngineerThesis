                                    <table>
                                        <tr>
                                            @{
    int cont = 0;
    List<EngineerCodeFirst.ViewModel.AssignedLineData> lines = ViewBag.Lines;

    foreach (var line in lines)
    {
        if (cont++ % 3 == 0)
        {
            @: </tr><tr>
                                }
                                @: <td>
                                    <input type="radio"
                                           name="selectedLines"
                                           value="@line.LineID"
                                           @(Html.Raw(line.Assigned ? "checked=\"checked\"" : "")) />
